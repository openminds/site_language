.form-area
  %p
    %label.code Language Code *
    = f.text_field :code
  %p
    %label.domain Domain
    = f.text_field :domain
  %p
    %label.checkbox Show in language navigation menu
    = f.check_box :show_in_langnav
  %p
    =submit_tag "Save"
    or
    =link_to "Cancel", site_languages_path